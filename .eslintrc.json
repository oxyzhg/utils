{
  "root": true,
  "extends": "eslint:recommended",
  "rules": {
    // possible errors
    "for-direction": 2,
    "getter-return": 2,
    "no-async-promise-executor": 2,
    "no-await-in-loop": 0,
    "no-compare-neg-zero": 2,
    "no-cond-assign": 2,
    "no-console": 1,
    "no-constant-condition": 2,
    "no-control-regex": 2,
    "no-debugger": 1,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-empty": 2,
    "no-empty-character-class": 2,
    "no-ex-assign": 2,
    "no-extra-boolean-cast": 2,
    "no-extra-parens": 0,
    "no-extra-semi": 2,
    "no-func-assign": 2,
    "no-inner-declarations": 2,
    "no-invalid-regexp": 2,
    "no-irregular-whitespace": 2,
    "no-misleading-character-class": 2,
    "no-obj-calls": 2,
    "no-prototype-builtins": 2,
    "no-regex-spaces": 2,
    "no-sparse-arrays": 2,
    "no-template-curly-in-string": 0,
    "no-unneeded-multiline": 2,
    "no-unreachable": 2,
    "no-unsafe-finally": 2,
    "no-unsafe-negation": 2,
    "require-automic-updates": 0,
    "use-isnan": 2,
    "valid-typeof": 2,
    // bast practices
    "default-case": 2,
    "eqeqeq": 2,
    "no-alert": 2,
    "no-case-declarations": 2,
    "no-else-return": 1,
    "no-empty-function": 1,
    "no-fallthrough": 2,
    "no-global-assign": 2,
    "no-multi-spaces": [2, { "ignoreEOLComments": false }],
    "no-octal": 2,
    "no-param-reassign": 1,
    "no-redeclare": 2,
    "no-self-assign": 2,
    "no-unused-labels": 2,
    "no-useless-catch": 2,
    "no-useless-escape": 2,
    "no-with": 2,
    "require-await": 1,
    // variables
    "no-delete-var": 2,
    "no-shadow-restricted-names": 2,
    "no-undef": 2,
    "no-unused-vars": 2,
    // stylestic issues
    "array-bracket-newline": [1, { "multiline": true }],
    "block-spacing": [1, "always"],
    "brace-style": [1, "1tbs", { "allowSingleLine": true }],
    "camelcase": 0,
    "comma-dangle": 0,
    "comma-space": [0, { "before": false, "after": true }],
    "comma-style": 0,
    "computed-property-spacing": [1, "never"],
    "eol-last": [1, "always"],
    "func-call-spacing": [1, "never"],
    "implicit-arrow-linebreak": [1, "beside"],
    "indent": [1, 2],
    "jsx-quotes": 1,
    "key-spacing": [1, { "beforeColon": false, "afterColon": true }],
    "keyword-spacing": [1, { "before": true, "after": true }],
    "max-len": [1, { "code": 100 }],
    "newline-per-chained-call": [1, { "ignoreChainWithDepth": 3 }],
    "no-mixed-spaces-and-tabs": 2,
    "no-multi-asign": 0,
    "no-multiple-empty-lines": 1,
    "no-trailing-spaces": 1,
    "no-whitespace-before-property": 1,
    "object-curly-newline": [1, { "multiline": true, "minProperties": 2 }],
    "object-curly-spacing": [1, "always"],
    "quotes": [1, "single"],
    "semi": [1, "always", { "omitLastInOneLineBlock": true }],
    "semi-spacing": [1, { "before": false, "after": false }],
    "semi-style": [1, "last"],
    "space-before-blocks": [1, "always"],
    "space-before-function-paren": [
      1,
      { "anonymous": "always", "named": "never", "asyncArrow": "always" }
    ],
    "space-in-parens": [1, "never"],
    "space-unary-ops": [1, { "words": true, "nonwords": false }],
    "switch-colon-spacing": [1, { "before": false, "after": true }],
    // ECMAScript6
    "arrow-body-style": [1, "as-needed"],
    "arrow-parens": [1, "as-needed"],
    "arrow-spacing": [1, { "before": true, "after": true }],
    "constructor-super": 2,
    "no-class-assign": 2,
    "no-const-assign": 2,
    "no-dupe-class-members": 2,
    "no-duplicate-imports": 1,
    "no-new-symbol": 2,
    "no-this-before-super": 2,
    "no-var": 1,
    "require-yield": 2,
    "rest-spread-spacing": [1, "never"]
  },
  "parserOptions": {
    "parser": "babel-eslint",
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true,
      "modules": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es6": true
  }
}
